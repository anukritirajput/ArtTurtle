from turtle import Turtle, Screen
import random
Timmy=Turtle()
Timmy.shape("turtle")
Timmy.color("red")
Timmy.pencolor("hotpink")
Timmy.pensize(2)
color=['medium blue','crimson','indigo','orange red','gold','lime','aquamarine','deep sky blue','olive drab']
for i in range(3,11):
  angle = 360/i
  tc=random.choice(color)
  for j in range (0,i):
    Timmy.color(tc)
    Timmy.forward(50)
    Timmy.right(angle)

screen=Screen()
screen.exitonclick()

